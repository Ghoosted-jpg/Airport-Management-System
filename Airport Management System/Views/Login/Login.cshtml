@model Airport_Management_System.Models.Login

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="min-h-screen flex items-center justify-center bg-gray-100" style="background-color: #f8f2ec;">
    <div class="bg-white shadow-2xl rounded-lg p-8 max-w-sm w-full">
        <h2 class="text-3xl font-extrabold text-indigo-600 text-center mb-6">Employee Login</h2>
        @using (Html.BeginForm("Login", "Login", FormMethod.Post, new { @class = "space-y-6" }))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("ReturnUrl", ViewBag.ReturnUrl as string)
            <div>
                @Html.LabelFor(m => m.Emp_ID, new { @class = "block text-sm font-medium text-gray-700" })
                <div class="relative">
                    @Html.TextBoxFor(m => m.Emp_ID, new { @class = "w-full px-4 py-3 mt-1 text-gray-900 bg-gray-100 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-600 pl-12 transition duration-300 ease-in-out", placeholder = "Enter your Employee ID" })
                    <img aria-hidden="true" alt="id-card" src="https://openui.fly.dev/openui/24x24.svg?text=🆔" class="absolute left-4 top-1/2 transform -translate-y-1/2">
                </div>
            </div>

            <div>
                @Html.LabelFor(m => m.Password, new { @class = "block text-sm font-medium text-gray-700" })
                <div class="relative">
                    @Html.TextBoxFor(m => m.Password, new { @class = "w-full px-4 py-3 mt-1 text-gray-900 bg-gray-100 rounded-md border border-gray-300 focus:outline-none focus:ring-2 focus:ring-indigo-600 pl-12 transition duration-300 ease-in-out", placeholder = "Enter your password", Type="Password" })
                    <img aria-hidden="true" alt="lock" src="https://openui.fly.dev/openui/24x24.svg?text=🔒" class="absolute left-4 top-1/2 transform -translate-y-1/2">
                </div>
                </div>
            if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
            {
                <div class="text-red-600 mt-2 text-sm font-medium">
                    @ViewBag.ErrorMessage
                </div>
            }
            <button type="submit" value="Login" class="w-full bg-gradient-to-r from-green-400 to-blue-500 text-white py-3 rounded-md hover:from-green-500 hover:to-blue-600 transition duration-300 ease-in-out transform hover:scale-105">Login</button>
        }
    </div>

</body>
</html>
@section Scripts {
}