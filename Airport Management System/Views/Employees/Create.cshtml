    <div class="fw-bold text-gray-800">
        @Html.ActionLink("Back to List", "Index")
    </div>
}
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        @Scripts.Render("~/bundles/jquery")
        <script>
            $(document).ready(function () {
                $('#PhoneNumber').on('input', function () {
                    let value = $(this).val().replace(/\D/g, ''); // Remove all non-digit characters

                    if (value.length > 10) {
                        value = value.substring(0, 12); // Limit to 10 digits
                    }

                    let formatted = '+92';
                    if (value.length > 2) {
                        formatted += '-' + value.substring(2, 5);
                    }
                    if (value.length > 5) {
                        formatted += '-' + value.substring(5);
                    }

                    $(this).val(formatted);
                });

                // Initial formatting when page loads
                let initialInput = $('#PhoneNumber').val().replace(/\D/g, ''); // Remove all non-digit characters
                let formatted = '+92';
                if (initialInput.length > 2) {
                    formatted += '-' + initialInput.substring(2, 5);
                }
                if (initialInput.length > 5) {
                    formatted += '-' + initialInput.substring(5);
                }
                $('#PhoneNumber').val(formatted);
            });
        </script>
        <script>
            $(document).ready(function () {
                var today = new Date().toISOString().split('T')[0];
                document.getElementById("dateField").setAttribute('max', today);
            });</script>
    }
