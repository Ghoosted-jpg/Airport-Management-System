@model Airport_Management_System.Models.Airport_Airline

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/index.cshtml";
}
@section Main{
    @*<h2 class="fw-bold text-gray-800">Create</h2>*@


    @using (Html.BeginForm("Create", "Airport_Airline", FormMethod.Post, new { id = "createForm" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal fw-bold text-gray-800">
            <h2>Add Airline To Airport</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <br />
                <span>Airport Name</span>
                @*@Html.LabelFor(model => model.Airport_Name, "Airport_Name", htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.DropDownList("Airport_Name", null, htmlAttributes: new { @class = "form-control", placeholder = "Enter Airport Name" })
                    @Html.ValidationMessageFor(model => model.Airport_Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <br />
                <span>Airline Name</span>
                @*@Html.LabelFor(model => model.Airline_Name, "Airline_Name", htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.DropDownList("Airline_Name", null, htmlAttributes: new { @class = "form-control", placeholder = "Enter Airline Name" })
                    @Html.ValidationMessageFor(model => model.Airline_Name, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <br />
                <span>Joining Date</span>
                @*@Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control", type = "date", id = "dateField" } })
                    @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default fw-bold text-gray-800" id="submitBtn" />
                </div>
            </div>
        </div>
    }

    <div class="fw-bold text-gray-800">
        @Html.ActionLink("Back to List", "Index")
    </div>
    }
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
        <script>
        $(document).ready(function () {
            var today = new Date().toISOString().split('T')[0];
            document.getElementById("dateField").setAttribute('max', today);
        });

        $(document).ready(function () {
            $("#submitBtn").click(function (event) {
                event.preventDefault(); // Prevent default form submission

                var joinDate = new Date($("#dateField").val());
                var airlineName = $("#Airline_Name").val();

                $.ajax({
                    url: '@Url.Action("GetAirlineStartDate", "Airport_Airline")',
                    type: 'GET',
                    data: { airlineName: airlineName },
                    success: function (data) {
                        var airlineStartDate = new Date(data.startDate);
                        if (joinDate < airlineStartDate) {
                            alert("Join Date cannot be before the Airline's Start Date.");
                        } else {
                            // Submit the form using vanilla JavaScript to avoid jQuery validation interference
                            document.getElementById("createForm").submit();
                        }
                    },
                    error: function () {
                        alert("Error retrieving Airline's Start Date.");
                    }
                });
            });
        });
        </script>


    }
