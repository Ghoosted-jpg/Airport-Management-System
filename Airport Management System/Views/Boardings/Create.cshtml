@model Airport_Management_System.Models.Boarding

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/other.cshtml";
}
@section Main{
    <h2 class="fw-bold text-gray-800">Add Boarding</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal fw-bold text-gray-800">
            <h4>Boarding</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <br />
                <span>Boarding ID</span>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Boarding_ID, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Boarding ID" } })
                    @Html.ValidationMessageFor(model => model.Boarding_ID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <br />
                <span>Boarding Time</span>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Time, new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
                    @Html.ValidationMessageFor(model => model.Time, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <br />
                <span>Schedule No</span>
                <div class="col-md-10">
                    @Html.DropDownList("Schedule_No", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Schedule_No, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <br />
                <span>Gate No</span>
                <div class="col-md-10">
                    @Html.DropDownList("Gate_No", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Gate_No, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default fw-bold text-gray-800" />
                </div>
            </div>
        </div>
    }

    <div class="fw-bold text-gray-800">
        @Html.ActionLink("Back to List", "Index")
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
