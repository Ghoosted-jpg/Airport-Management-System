@model Airport_Management_System.Models.Boarding

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/other.cshtml";
}
@section Main{
    <h2 class="fw-bold text-gray-800">Editing Boarding @Html.DisplayFor(model => model.Boarding_ID)</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal fw-bold text-gray-800">
            @*<h4>Boarding</h4>*@
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Boarding_ID)

            <div class="form-group">
                <br />
                <span>Boarding Time</span>
                @*@Html.LabelFor(model => model.Time, htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Time, new { htmlAttributes = new { @class = "form-control", Type = "datetime-local" } })
                    @Html.ValidationMessageFor(model => model.Time, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <br />
                <span>Schedule No</span>
                @*@Html.LabelFor(model => model.Schedule_No, "Schedule_No", htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.DropDownList("Schedule_No", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Schedule_No, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <span>Gate No</span>
                @*@Html.LabelFor(model => model.Gate_No, "Gate_No", htmlAttributes: new { @class = "control-label col-md-2" })*@
                <div class="col-md-10">
                    @Html.DropDownList("Gate_No", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Gate_No, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default fw-bold text-gray-800" />
                </div>
            </div>
        </div>
    }

    <div class="fw-bold text-gray-800">
        @Html.ActionLink("Back to List", "Index")
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
