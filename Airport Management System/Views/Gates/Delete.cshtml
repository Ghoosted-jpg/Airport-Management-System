@model Airport_Management_System.Models.Gate

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/index.cshtml";
}
@section Main{
    <h2 class="fw-bold text-gray-800">Delete</h2>

    <h3 class="fw-bold text-gray-800">Are you sure you want to delete @Html.DisplayFor(model => model.Airport_Name)'s Gate No @Html.DisplayFor(model => model.Gate_No)?</h3>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt class="fw-bold text-gray-800">
                <span>Gate No</span>
                @*@Html.DisplayNameFor(model => model.Terminal_No)*@
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Gate_No)
            </dd>

            <dt class="fw-bold text-gray-800">
                <span>Terminal No</span>
                @*@Html.DisplayNameFor(model => model.Terminal_No)*@
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Terminal_No)
            </dd>

            <dt class="fw-bold text-gray-800">
                <span>Airport Name</span>
                @*@Html.DisplayNameFor(model => model.Airport.Airport_Name)*@
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Airport.Airport_Name)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color fw-bold text-gray-800">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Back to List", "Index")
            </div>
        }
    </div>
    }