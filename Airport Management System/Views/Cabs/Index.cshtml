@model IEnumerable<Airport_Management_System.Models.Cab>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/index.cshtml";
}
@section Main{
    <h2 class="form-horizontal fw-bold text-gray-800">Cabs Data</h2>
    <hr />
    <p class="form-horizontal fw-bold text-gray-800">
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr class="form-horizontal fw-bold text-gray-800">
            <th>
                <span>Cab ID</span>
                @*@Html.DisplayNameFor(model => model.Cab_ID)*@
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th>
                <span>Airport Name</span>
                @*@Html.DisplayNameFor(model => model.Airport.Airport_Name)*@
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Cab_ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Model)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Company)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Airport.Airport_Name)
                </td>
                <td class="form-horizontal fw-bold text-gray-800">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Cab_ID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Cab_ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Cab_ID })
                </td>
            </tr>
        }

    </table>
    }