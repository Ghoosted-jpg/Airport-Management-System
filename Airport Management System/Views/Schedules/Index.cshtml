@model IEnumerable<Airport_Management_System.Models.Schedule>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/other.cshtml";
}
@section Main{
    <h2 class="form-horizontal fw-bold text-gray-800">Schedules Data</h2>
    <hr />
    <p class="form-horizontal fw-bold text-gray-800">
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr class="form-horizontal fw-bold text-gray-800">
            <th>
                <span>Schedule No</span>
                @*@Html.DisplayNameFor(model => model.Airport.Size)*@
            </th>
            <th>
                <span>Airport Name</span>
                @*@Html.DisplayNameFor(model => model.Airport.Size)*@
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Schedule_No)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Airport.Size)
                </td>
                <td class="form-horizontal fw-bold text-gray-800">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Schedule_No }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Schedule_No }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Schedule_No })
                </td>
            </tr>
        }

    </table>
}